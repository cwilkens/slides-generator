{
    "compilerOptions": {
        "baseUrl": "./",
        "rootDir": "src",
        "outDir": "build",
        "sourceMap": true,
        "declaration": false,
        "downlevelIteration": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "strict": true,
        "noImplicitAny": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2018",
            "dom"
        ]
    }
}